<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.activity.MainActivity">

    <Button
        android:id="@+id/btn_new_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_account"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_accounts"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_new_account"
        android:layout_above="@id/btn_account_as_json"/>

    <Button
        android:visibility="gone"
        android:id="@+id/btn_raz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAZ" />

    <Button
        android:id="@+id/btn_account_as_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/account_to_json"/>

</RelativeLayout>